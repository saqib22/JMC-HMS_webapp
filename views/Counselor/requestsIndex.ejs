<% include ../partials/header %>
<div class="ui center aligned container">
    <h1 class="ui massive blue block header very padded" style="margin:40px;"> Requests </h1>
    <div class="ui section divider"></div>

    <% if (patients.length !== 0) { %>
        <div class="ui piled segments">
            <div class="ui animated list">
                <% patients.forEach(function(patient) { %>
                    <div class="item">
                        <div class="ui green piled segment">
                            <p><span class="ui small green header">Patient ID:</span>
                                <%= patient.userID %>
                            </p>
                            <p><span class="ui small green header">Phone:</span>
                                <%= patient.User.phone %>
                            </p>

                            <p><span class="ui small green header">Email:</span>
                                <%= patient.User.email %>
                            </p>

                            <div class="ui divider"></div>

                            <form action="/counselors/appointments/<%= patient.userID %>" method="GET">
                                <input class = "ui large green inverted button" type="submit" value="Schedule">
                            </form>
            
                            

                        </div>
                    </div>
                    <%}); %>
            </div>

        </div>
        <% } else { %>
            <h2 class="ui large blue inverted block header very padded"> There are currently no pending requests </h2>

            <% } %>

</div>
<% include ../partials/footer %>

















